---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/BlogPost.astro";
import Projets from "../components/Projets.astro";
import About from "../components/About.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <img src="head.png" alt="" class="absolute -top-10 -z-10" />

    <main
      class="h-screen w-full relative flex flex-col items-center gap-20 justify-center overflow-x-hidden overflow-y-hidden mt-0 mb-0"
    >
      <div>
        <h1 class="h-1 text-white uppercase mt-20">Portfolio</h1>
      </div>
      <div class="flex flex-col items-center md:flex-row mb-36">
        <img
          src="/sun.png"
          alt=""
          class="absolute scale-75 -z-30 top-0 md:left-24 -top-10"
        />

        <img src="/LogoDT.png" class="w-[200px]" />

        <div>
          <h2
            class="leading-none font-bold uppercase text-white tracking-[0.1em]"
          >
            Dragan
          </h2>
          <h2 class="text-white indent-20">Turk</h2>
        </div>
      </div>
      <img src="/bottomland.png" alt="" class="absolute bottom-0 -z-20" />
    </main>

    <article class="pt-10">
      <About />
    </article>

    <article
      class="bg-[url('/bg-real-md.png')] z-30 bg-contain w-full relative flex flex-col items-center my-10"
    >
      <img src="/planete.png" alt="" class="absolute -z-20 top-0 left-0 w-96" />
      <img
        src="/underline.png"
        alt=""
        class="hidden absolute top-10 z-10 rounded-none w-1/6 mr-12 md:block"
      />
      <h3 class="text-white font-bold mt-20">Mes r√©alisations</h3>
      <img
        src="/underline.png"
        alt=""
        class="hidden absolute top-36 z-10 rounded-none w-1/6 ml-12 md:block"
      />
      <Projets />
    </article>
  </body>
</html>
